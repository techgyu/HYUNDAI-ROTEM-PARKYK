//
function changeSelect()//이메일
{
	var On_Mail2 = document.getElementById("On_Mail2");
	var On_Mail3 = document.getElementById("On_Mail3");
	if(On_Mail3.value !='' ) 
	{		
			On_Mail2.value=On_Mail3.value;
			On_Mail2.readOnly=true		
	}	
	else
	{
		On_Mail2.value='';
		On_Mail2.readOnly=false;
		On_Mail2.focus();
	}
}

