function valueck()//이메일직접입력
{
	var On_Mail2 = document.getElementById("On_Mail2");
	if(On_Mail2.value =='직접입력' || On_Mail2.value == "" ) 
	{		
		On_Mail2.value='';
		On_Mail2.readOnly=false;
	}	
	else
	{
		On_Mail2.readOnly=true;
	}

}


function checkdigit( checkval )
{
	var idx;
	var val = new String( checkval );
	var len = val.length;

	for ( idx=0; idx < len; idx++ ) {
		if ( val.charAt(idx) != '0' &&
			val.charAt(idx) != '1' &&
			val.charAt(idx) != '2' &&
			val.charAt(idx) != '3' &&
			val.charAt(idx) != '4' &&
			val.charAt(idx) != '5' &&
			val.charAt(idx) != '6' &&
			val.charAt(idx) != '7' &&
			val.charAt(idx) != '8' &&
			val.charAt(idx) != '9' ) {

			return false;
		}
	}

	return true;
}

