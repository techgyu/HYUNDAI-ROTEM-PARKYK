				height_val = height_val;
           }
           else if(ua.indexOf('MSIE 7.0') >= 0){
                     // IE 7.0
                     //alert('ie7');
					 height_val = height_val;
           }
		   else if (ua.indexOf('Trident/5.0') >= 0)
		   {	
			//IE9.0
				height_val = height_val - 80;
		   }
		   else{
			   //ie 10, 11
