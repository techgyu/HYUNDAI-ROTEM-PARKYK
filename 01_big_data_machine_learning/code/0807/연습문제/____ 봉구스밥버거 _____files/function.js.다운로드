//오토포커스 (현재아이디,이동할 아이디,길이)
function autoKey(obj1,obj2,num)
{
	var target1 = eval(document.getElementById(obj1));
	var target2 = eval(document.getElementById(obj2));
	//alert(target)
	if (target1.value.length == num)
	{
		target2.focus();
	}

}

